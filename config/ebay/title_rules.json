{
  "version": "1.0.0",
  "max_len": 80,

  "separator": " ",

  "order": [
    "year",
    "brand",
    "set",
    "player_first",
    "player_last",
    "card_number",
    "insert",
    "parallel",
    "hit",
    "serial",
    "team_name",
    "team_city",
    "rookie"
  ],

  "optional_if_missing": [
    "insert",
    "parallel",
    "hit",
    "serial",
    "team_name",
    "team_city",
    "rookie"
  ],

  "token_rules": {
    "card_number": {
      "prefix": "#",
      "strip_patterns": ["(?i)\\bno\\.?\\b", "(?i)\\bcard\\b"]
    },

    "team_city": {
      "require_full_city_name": true,
      "notes": "City full name, no abbreviations per Title_Structure.md"
    },

    "serial": {
      "ebay_mode": "slash_only",
      "include_first_number_only_if": ["first_eq_1", "first_eq_second"],
      "examples": ["1/10", "10/10", "/10", "/99"],
      "notes": "For eBay titles use /99 etc; include first number only when 1/x or x/x."
    },

    "hit": {
      "allowed": ["Auto", "Patch", "Patch Auto"],
      "aliases": {
        "Autograph": "Auto",
        "Signed": "Auto",
        "Jersey": "Patch",
        "Relic": "Patch",
        "Memorabilia": "Patch",
        "Auto Patch": "Patch Auto",
        "Patch Autograph": "Patch Auto"
      }
    },

    "rookie": {
      "aliases": {
        "Rookie": "Rookie",
        "RC": "Rookie",
        "Rookie Card": "Rookie"
      }
    }
  },

  "truncate_priority_keep": [
    "year",
    "brand",
    "set",
    "player_first",
    "player_last",
    "card_number"
  ],

  "truncate_priority_then": [
    "rookie",
    "hit",
    "serial",
    "insert",
    "parallel",
    "team_name",
    "team_city"
  ]
}

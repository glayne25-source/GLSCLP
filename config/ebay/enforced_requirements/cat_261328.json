{
  "version": "0.2.0-draft",
  "category_id": "261328",
  "scope": {
    "sealed_boxes_and_packs": "excluded",
    "notes": "Rules apply to trading card singles only."
  },

  "require_globals_injected": true,

  "entry_types": {
    "Print Run": "derived",
    "Insert Set": "free_text",
    "Card Number": "free_text",
    "Card Name": "free_text",
    "Signed By": "override_allowed",

    "Player/Athlete": "dropdown_strict",
    "Season": "dropdown_strict",
    "Manufacturer": "dropdown_strict",
    "Parallel/Variety": "dropdown_strict",
    "Features": "dropdown_strict_multi",
    "Set": "dropdown_strict",
    "Team": "dropdown_strict",
    "League": "dropdown_strict",
    "Autograph Authentication": "dropdown_strict",
    "Autograph Format": "dropdown_strict",
    "Year Manufactured": "dropdown_strict",
    "Card Size": "dropdown_strict",
    "Country of Origin": "dropdown_strict",
    "Material": "dropdown_strict",
    "Event/Tournament": "dropdown_strict",
    "Language": "dropdown_strict",
    "Card Thickness": "dropdown_strict",
    "Customized": "dropdown_strict",
    "Type": "dropdown_strict",

    "Autographed": "binary",
    "Vintage": "binary",
    "Original/Licensed Reprint": "binary"
  },

  "derive_and_enforce": {
    "Card Name": {
      "from": "player_name",
      "validation": "enforce_if_present"
    },
    "Card Number": {
      "from": "card_number",
      "transform": "strip_hash",
      "validation": "enforce_if_present"
    },
    "Print Run": {
      "from": "serial_number",
      "transform": "serial_denominator_only_no_slash",
      "validation": "enforce_if_serial_present"
    },
    "Year Manufactured": {
      "from": "year",
      "validation": "enforce"
    },
    "Season": {
      "from": "year",
      "validation": "enforce"
    }
  },

  "conditional_aspects": {
    "Event/Tournament": {
      "rules": [
        { "when": { "Sport": "Football" }, "value": "Super Bowl" },
        { "when": { "Sport": "Basketball" }, "value": "NBA Finals" },
        { "when": { "Sport": "Baseball" }, "value": "MLB World Series" }
      ],
      "validation": "enforce_when_sport_present"
    },
    "League": {
      "rules": [
        { "when": { "Sport": "Football" }, "value": "National Football League (NFL)" },
        { "when": { "Sport": "Baseball" }, "value": "Major League Baseball (MLB)" },
        { "when": { "Sport": "Basketball" }, "value": "National Basketball Association (NBA)" }
      ],
      "validation": "enforce_when_sport_present"
    },
    "Card Thickness": {
      "default": "35 Pt.",
      "exceptions": [
        {
          "when": { "Features_any": ["Memorabilia"] },
          "value": ""
        }
      ],
      "validation": "enforce"
    },
    "California Prop 65 Warning": {
      "value": "",
      "validation": "explicit_blank"
    }
  },

  "autograph_rules": {
    "Autographed": {
      "when_no": {
        "Signed By": "",
        "Autograph Authentication": "",
        "Autograph Authentication Number": "",
        "Autograph Format": ""
      },
      "when_yes": {
        "Signed By": { "from": "player_name", "override_allowed": true },
        "Autograph Authentication": { "value": "Brand / Manufacturer" },
        "Autograph Authentication Number": "",
        "Autograph Format": {
          "allowed_by_policy": ["Hard Signed", "Label or Sticker"],
          "disallowed_by_policy": ["Cut"]
        }
      },
      "validation": "enforce_dependencies"
    }
  },

  "features_rules": {
    "minimum_one_of": ["Rookie", "Parallel/Variety", "Base Set"],
    "default_if_none_detected": ["Base Set"],
    "conditional_add": [
      { "if": "is_insert", "add": "Insert" },
      { "if": "has_serial", "add": "Serial Numbered" },
      { "if": "is_memorabilia", "add": "Memorabilia" },
      { "if": "is_short_print", "add": "Short Print" }
    ]
  },

  "parallel_variety_rules": {
    "default": "[Base]",
    "validation": "enforce_if_missing"
  },

  "shipping_enforcement": {
    "override_policy": "BMWT_OVER_20",
    "force_bmwt_if_any": [
      { "reason": "graded_or_slabbed", "when": { "observed.grading.company": "*" } },
      { "reason": "encased_one_touch_magnetic", "when": { "observed.holder": ["One-Touch", "Magnetic", "Encased"] } },
      { "reason": "patch_relic_memorabilia", "when": { "observed.features_any": ["Patch", "Relic", "Memorabilia"] } }
    ],
    "combined_shipping": {
      "pwe_each_additional_usd": 0.5,
      "bmwt_each_additional_usd": 1.0,
      "auto_upgrade_to_bmwt_if_pwe_items_gte": 4,
      "auto_upgrade_bmwt_price_usd": 4.95,
      "max_shipping_usd": 8.95
    }
  },

  "pipeline_notes": [
    "Typed vs dropdown is explicit via entry_types; pipeline must never emit literal false/None strings.",
    "Print Run is treated as DERIVED even though UI allows typing; denominator only, no '/'.",
    "Signed By is the only dropdown that may be overridden with free text (player name) if necessary.",
    "Set aspect dropdown values may embed [Year]_[Brand]_[Set]; do not use Set for year matching."
  ]
}

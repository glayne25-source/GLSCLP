{
  "category_id": "261328",
  "status": "DRAFT",
  "purpose": "Enforced business-quality requirements and deterministic overrides for listings in category 261328. This file is NOT the eBay schema and is allowed to contain your rules.",

  "gates": {
    "inject_all_globals_confirmation_required": true,
    "notes": "Before any eBay push, require the explicit 'inject all globals confirmation' step to pass."
  },

  "minimum_fields": {
    "title_components_must_exist": [
      "year",
      "manufacturer",
      "set",
      "player_name",
      "card_number"
    ],
    "item_specifics_must_exist": [
      "Sport",
      "Type",
      "Player/Athlete",
      "Year Manufactured",
      "Manufacturer",
      "Set",
      "Card Number"
    ],
    "warn_if_missing": [
      "Team",
      "League",
      "Features",
      "Parallel/Variety",
      "Season",
      "Card Size",
      "Language",
      "Autographed",
      "Signed",
      "Vintage",
      "Rookie",
      "Insert",
      "Insert Set",
      "Serial Numbered",
      "Print Run"
    ]
  },

  "observed_to_aspects_enforcement": {
    "notes": "These rules only apply when upstream vision/OCR provides observed values. No inference is performed here.",

    "serial_to_print_run": {
      "observed_field": "observed.serial",
      "target_aspect": "Print Run",
      "rule": "If observed.serial exists, Print Run must equal the denominator (e.g., '12/99' -> '99', '/99' -> '99', '1/1' -> '1').",
      "on_failure": "block"
    },

    "insert_to_insert_set": {
      "observed_field": "observed.insert_set",
      "target_aspect": "Insert Set",
      "rule": "If observed.insert_set exists (non-empty), Insert Set must equal that value.",
      "on_failure": "block"
    }
  },

  "shipping": {
    "policy_ids_source": "config/ebay/policies.json",
    "policy_keys": {
      "PWE": "PWE_UNDER_20",
      "BMWT": "BMWT_OVER_20"
    },

    "force_bmwt_overrides": {
      "notes": "These conditions force BMWT regardless of price.",
      "override_policy_key": "BMWT",
      "force_if_any": [
        {
          "reason": "graded_or_slabbed",
          "when": {
            "observed.grading.company": "*"
          },
          "examples": ["PSA", "BGS", "SGC", "CGC", "TAG"]
        },
        {
          "reason": "patch_or_relic",
          "when": {
            "observed.features_any": ["Patch", "Relic", "Memorabilia"]
          }
        },
        {
          "reason": "encased_one_touch_magnetic_holder",
          "when": {
            "observed.holder_any": ["One-Touch", "Magnetic", "Encased", "Magnetic Holder", "One Touch"]
          }
        }
      ]
    },

    "combined_shipping": {
      "notes": "Draft notes from your combined shipping setup; values captured so we don't forget. Selection logic still lives in pipeline, not in policies.json.",

      "promotional_shipping_rule": {
        "type": "minimum_number_of_items_purchased",
        "min_items": 4,
        "shipping_cost": 4.95,
        "free_shipping": false
      },

      "each_additional_item_profiles": {
        "PWE": {
          "profile_name": "$0.5 for PWE",
          "profile_id": "1437599013",
          "each_additional_cost": 0.50
        },
        "BMWT": {
          "profile_name": "$1 for BMWT",
          "profile_id": "1437600013",
          "each_additional_cost": 1.00
        }
      }
    }
  }
}
